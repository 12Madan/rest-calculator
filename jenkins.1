pipeline {
    agent any

    parameters {
        choice(name: 'ENV', choices: ['dev', 'qa', 'prod'], description: 'Select Environment')
    }

    stages {
        stage('Print Selected Env') {
            steps {
                script {
                    if (params.ENV == 'dev') {
                        echo "User selected dev"
                    } else {
                        echo "User selected: ${params.ENV}"
                    }
                }
            }
        }
    }
}
