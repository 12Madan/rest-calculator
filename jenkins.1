pipeline {
    agent any

    stages {
        stage('Show Env Variables') {
            steps {
                echo "Workspace: ${env.WORKSPACE}"
                echo "Jenkins Home: ${env.JENKINS_HOME}"
                echo "Build Number: ${env.BUILD_NUMBER}"
                echo "Job Name: ${env.JOB_NAME}"
                echo "Node: ${env.NODE_NAME}"
            }
        }
    }
}
